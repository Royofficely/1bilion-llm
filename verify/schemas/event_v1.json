{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Event V1 Schema",
  "required": ["name", "date", "time", "location", "description"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "time": {
      "type": "string",
      "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9](:[0-5][0-9])?( [AP]M)?$"
    },
    "location": {
      "type": "string",
      "minLength": 1,
      "maxLength": 300
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000
    }
  },
  "additionalProperties": false
}